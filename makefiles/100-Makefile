CC= gcc -Wall -Werror -Wextra -pedantic
SRC= main.c school.c
OBJ= $(SRC:.c=.o)
NAME= school
RM= rm -f *~
CFLAGS= -Wall -Werror -Wextra -pedantic
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) $(NAME)
oclean:
	$(RM) $(OBJ) $(NAME)
fclean:
	$(RM) $(NAME)
	$(RM) $(OBJ)
re:
	$(RM) -f $(OBJ) $(NAME)
